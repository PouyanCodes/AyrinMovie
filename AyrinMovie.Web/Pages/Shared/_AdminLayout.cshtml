<!DOCTYPE html>
<html lang="fa">
<head>

    <partial name="Admin/_MetaTags" />

    <title>@ViewData["Title"]</title>

    <!-- Favicon -->
    <link rel="icon" href="~/Web/assest/logo/film.ico">


    <link href="~/Admin/assets/css/loader.css" rel="stylesheet" type="text/css" />
    <script src="~/Admin/assets/js/loader.js"></script>

    <partial name="Admin/_Styles" />
    @RenderSection("Styles",false)

</head>
<body>


    <partial name="Admin/_Loader" />

    <partial name="Admin/_Navbar" />


    <!-- MAIN CONTAINER  -->

    <div class="main-container" id="container">

        <div class="overlay"></div>
        <div class="search-overlay"></div>

        <partial name="Admin/_SideBar" />



        <!-- CONTENT PART  -->

        <div id="content" class="main-content">
            <div class="layout-px-spacing">
                <div class="row layout-top-spacing">
                    @RenderBody()
                </div>
            </div>

            <partial name="Admin/_Footer" />

        </div>

    </div>

    <partial name="Admin/_Scripts" />
    @RenderSection("Scripts",false)

</body>
</html>