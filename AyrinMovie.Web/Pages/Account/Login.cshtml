@page
@model AyrinMovie.Web.Pages.Account.LoginModel

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "حساب کاربری | ورود ";
}


<h1>ورود کاربر </h1>
<p>لطفا اطلاعات خود را وارد نمایید </p>

<form method="post" class="text-left">

    <div class="form">

        <div id="username-field" class="field-wrapper input">
            <label for="username">ایمیل</label>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
            <input asp-for="Login.Email" id="username" type="email" class="form-control" placeholder="ایمیل خود را وارد نمایید">
            <span asp-validation-for="Login.Email" class="text-danger"></span>
        </div>

        <div id="password-field" class="field-wrapper input mb-2">
            <div class="d-flex justify-content-between">
                <label for="password">رمزعبور</label>
                <a href="/Account/ForgotPassword" class="forgot-pass-link">رمز عبور را فراموش کرده اید؟</a>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
            <input asp-for="Login.Password" id="password" type="password" class="form-control" placeholder="کلمه ی عبور خود را وارد کنید">
            <span asp-validation-for="Login.Password" class="text-danger"></span>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" id="toggle-password" class="feather feather-eye"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
        </div>
        <div class="d-sm-flex justify-content-between">
            <div class="field-wrapper">
                <button type="submit" class="btn btn-primary" >ورود</button>
            </div>
        </div>

        <div class="field-wrapper input mb-2">
            <div class="n-chk ">
                <label class="new-control new-checkbox checkbox-primary">
                    <input asp-for="Login.RememberMe" type="checkbox" class="new-control-input" checked>
                    <span class="new-control-indicator"></span>مرا به خاطر بسپار
                </label>
            </div>
        </div>


        @if (ViewData["isSuccess"] != null)
        {
            <p class="text-success">ورود با موفقیت انجام شد</p>

            <script>
                // Your delay in milliseconds
                var delay = 1000;
                setTimeout(function () { window.location = "/admin/Index"; }, delay);
            </script>
        }


    </div>

</form>