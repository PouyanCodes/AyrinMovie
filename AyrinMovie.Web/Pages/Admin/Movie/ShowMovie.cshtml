@page "{id}"
@using AyrinMovie.Core.Convertors
@model AyrinMovie.Web.Pages.Admin.Movie.ShowMovieModel

@{
    ViewData["Title"] = "پنل کاربری | اطلاعات فیلم - انیمیشن ";
    ViewData["Page-Header"] = "اطلاعات فیلم - انیمیشن";
    ViewData["MovieMenuActive"] = "true";
}


@section Styles
{
<link href="~/Admin/assets/css/users/user-profile.css" rel="stylesheet" type="text/css" />
}



<div class="col-xl-4 col-lg-6 col-md-5 col-sm-12 layout-top-spacing">

    <div class="user-profile layout-spacing">
        <div class="widget-content widget-content-area">
            <div class="d-flex justify-content-between">
                <h3>فیلم - انیمیشن</h3>
                <a href="/Admin/Movie/EditMovie/@Model.MovieInfo.MovieId" class="mt-2 edit-profile"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-3"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg></a>
            </div>
            <div class="text-center user-info">
                <img src="/Files/Movies/Thumbnail/@Model.MovieInfo.MovieImageName" alt="avatar">
                <p>@Model.MovieInfo.MovieTitle</p>
            </div>
            <div class="user-info-list">

                <div>
                    <ul class="contacts-block list-unstyled">


                        @if (Model.MovieInfo.ProductionYear != null)
                        {
                            <li class="contacts-block__item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>سال ساخت : @Model.MovieInfo.ProductionYear
                            </li>
                        }

                        @if (Model.MovieInfo.IMDBScore != null)
                        {
                            <li class="contacts-block__item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg> نمره منتقدین : @Model.MovieInfo.IMDBScore
                            </li>
                        }

                        @if (Model.MovieInfo.MovieSaticfaction != null)
                        {
                            <li class="contacts-block__item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg>@Model.MovieInfo.MovieSaticfaction رضایت
                            </li>
                        }

                        @if (Model.MovieInfo.MovieTime != null)
                        {
                            <li class="contacts-block__item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-pie-chart"><path d="M21.21 15.89A10 10 0 1 1 8 2.83"></path><path d="M22 12A10 10 0 0 0 12 2v10z"></path></svg>زمان فیلم : @Model.MovieInfo.MovieTime
                            </li>
                        }


                        @if (Model.MovieInfo.MovieGenre != null)
                        {
                            <li class="contacts-block__item">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-coffee"><path d="M18 8h1a4 4 0 0 1 0 8h-1"></path><path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path><line x1="6" y1="3" x2="3" y2="4"></line><line x1="10" y1="1" x2="10" y2="4"></line><line x1="14" y1="1" x2="14" y2="4"></line></svg> ژانر : @Model.MovieInfo.MovieGenre
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="col-xl-8 col-lg-6 col-md-7 col-sm-12 layout-top-spacing">
    <div class="bio layout-spacing ">

        <div class="widget-content widget-content-area">
            <h3>درباره ی فیلم</h3>
            @Model.MovieInfo.MovieDescription
        </div>


        @if (!string.IsNullOrEmpty(Model.MovieInfo.MovieStory))
        {
            <div class="widget-content widget-content-area">
                <h3>داستان فیلم</h3>
                @Model.MovieInfo.MovieDescription
            </div>
        }


        @if (!string.IsNullOrEmpty(Model.MovieInfo.Tags))
        {
            <div class="widget-content widget-content-area">
                <h3>برچسب ها</h3>
                @Model.MovieInfo.Tags
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.MovieInfo.Actors))
        {
            <div class="widget-content widget-content-area">
                <h3>بازیگران</h3>
                @Model.MovieInfo.Actors
            </div>
        }

        <div class="widget-content widget-content-area">
        </div>



    </div>
</div>