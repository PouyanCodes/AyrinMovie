@page "{id}"
@using AyrinMovie.Core.Convertors
@model AyrinMovie.Web.Pages.Admin.Blog.ShowArticleModel

@{
    ViewData["Title"] = "پنل کاربری | اطلاعات مقاله ";
    ViewData["Page-Header"] = "اطلاعات مقاله";
    ViewData["ArticlesMenuActive"] = "true";
}

@section Styles
{
<link href="~/Admin/assets/css/users/user-profile.css" rel="stylesheet" type="text/css" />
}



<!-- Content -->
<div class="col-xl-4 col-lg-6 col-md-5 col-sm-12 layout-top-spacing">

    <div class="item-profile layout-spacing">
        <div class="widget-content widget-content-area">
            <div class="d-flex justify-content-between">
                <h3>مقاله</h3>
                <a href="/Admin/Blog/EditArticle/@Model.ArticleInfo.ArticleId" class="mt-2 edit-profile"> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-3"><path d="M12 20h9"></path><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path></svg></a>
            </div>
            <div class="text-center user-info">
                <img src="/Files/Blog/Thumbnail/@Model.ArticleInfo.ArticleImageName" alt="avatar">
                <p>@Model.ArticleInfo.ArticleTitle</p>
            </div>
            <div class="item-info-list">

                <div>
                    <ul class="item-block list-unstyled">
                        <li class="contacts-block__item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-coffee"><path d="M18 8h1a4 4 0 0 1 0 8h-1"></path><path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path><line x1="6" y1="1" x2="6" y2="4"></line><line x1="10" y1="1" x2="10" y2="4"></line><line x1="14" y1="1" x2="14" y2="4"></line></svg> @Model.ArticleInfo.AuthorName
                        </li>
                        <li class="contacts-block__item">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>

                            @if (Model.ArticleInfo.UpdateDate != null)
                            {
                                @Model.ArticleInfo.UpdateDate
                            }
                            else
                            {
                                @Model.ArticleInfo.CreateDate.ToShamsi()
                            }

                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="col-xl-8 col-lg-6 col-md-7 col-sm-12 layout-top-spacing">
    <div class="info layout-spacing ">
        <div class="widget-content widget-content-area">
            <h3>متن</h3>
            
            @Html.Raw(Model.ArticleInfo.ArticleText)

            <div class="info-box">
                <div class="row">

                    @if (Model.ArticleInfo.Tags != null)
                    {
                        <h3>برچسب ها</h3>
                        <p>@Model.ArticleInfo.Tags</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>